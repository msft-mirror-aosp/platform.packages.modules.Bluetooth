        "BluetoothGeneratedPacketsSmp_h",
    ],
    export_generated_headers: [
        "BluetoothGeneratedPacketsSmp_h",
    ],
    host_supported: true,
    apex_available: ["com.android.bt"],
    min_sdk_version: "33",
