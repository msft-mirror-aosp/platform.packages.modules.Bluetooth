genrule {
    name: "BluetoothGeneratedPacketsSmp_h",
    defaults: ["BluetoothGeneratedPackets_default"],
    srcs: ["smp_packets.pdl"],
    out: ["security/smp_packets.h"],
    visibility: ["//visibility:private"],
}

