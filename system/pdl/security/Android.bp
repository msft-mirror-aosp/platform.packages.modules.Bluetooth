cc_library_static {
    name: "libbluetooth_smp_pdl",
    header_libs: [
        "libbluetooth_smp_pdl_header",
    ],
    export_header_lib_headers: [
        "libbluetooth_smp_pdl_header",
    ],
    host_supported: true,
    apex_available: ["com.android.bt"],
    min_sdk_version: "33",
}
